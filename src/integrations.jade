extends _layouts/primary

block title
  title Integrations | BitPay

append vars
  -var integrationSelected = 'Integrated Solutions'
  -var pageSelected = 'Integrations'
      
block content
  mixin integration(src, href, name)
    .column.small-3.margin-bottom.end
      a.h1.background-contain.integration-logo(href="#{href}" title="#{name}" style="background-image: url('/images/integrations/#{src}');")
      span.small.text-center.block.margin-top-less #{name}

  .section.bg-gray.border-vertical-gray.margin-bottom-less
    .row
      .column.medium-10.medium-offset-1
        h2.text-center.header__bottom-border.fade-in-up Accept bitcoin anywhere you take payments.
        p.lead.text-center.margin-bottom.fade-in-up.delay-1 Over 40 integrations and counting.
      .column.medium-8.medium-offset-2.end.fade-in-up.delay-2
        form
          input.integration-search(placeholder="Search our integrations..." type="search" value="" name="search")
          span.search-icon.background-contain(style="background-image: url('/images/search.svg');")
  include _includes/integrations-nav
            
  .section
    .row
      .column.medium-4.large-5.margin-bottom
        h3.header__bottom-border-left Integrated Solutions
        p.lead These integrated solutions work out of the box, no development required. Simply connect your BitPay account and begin accepting bitcoin payments.
      .column.medium-8.large-6.large-offset-1
        +integration("demandware.png", "http://demandware.com", "Demandware")
        +integration("shopify.png", "http://shopify.com", "Shopify")
        +integration("paypal.png", "http://paypal.com", "PayPal")
        +integration("3dcart.png", "http://3dcart.com", "3DCart")
        +integration("blesta.png", "http://blesta.com", "Blesta")
        +integration("nats.png", "http://www.toomuchmedia.com/pp_nats.htm", "NATs")
        +integration("foxycart.png", "http://foxycart.com", "Foxycart")
        +integration("prospercart.png", "http://prospercart.fi", "ProsperCart")
        +integration("lemonstand.png", "http://lemonstand.com", "Lemonstand")
        +integration("cydec.png", "http://cydec.com", "Cydec")
        +integration("mpa3.png", "http://mpa3.com", "MPA3")
        +integration("egovlink.png", "http://egovlink.com", "E-GOV Link")
        +integration("globalpayments.png", "http://globalpaymentsinc.com", "Global Payments")
        +integration("bitmonet.png", "http://bitmonet.com", "Bitmonet")
        
  .section.border-top-gray
    .row
      .column.medium-4.large-5.margin-bottom
        h3.header__bottom-border-left Open Source Plugins
        p.lead BitPay develops and maintains plugins for many of the world’s most popular open-source eCommerce solutions.
      .column.medium-8.large-6.large-offset-1
        +integration("magento.png", "http://magento.com", "Magento")
        +integration("ecwid.png", "http://ecwid.com", "Ecwid")
        +integration("gravityforms.png", "http://gravityforms.com", "Gravity Forms")
        +integration("membershippro.png", "http://.com", "Membership Pro")
        +integration("opencart.png", "http://opencart.com", "OpenCart")
        +integration("oscommerce.png", "http://oscommerce.com", "OScommerce")
        +integration("prestashop.png", "http://prestashop.com", "PrestaShop")
        +integration("spreecommerce.png", "http://spreecommerce.com", "Spree Commerce")
        +integration("ubercart.png", "http://ubercart.com", "Ubercart")
        +integration("virtuemart.png", "http://virtuemart.net", "Virtue Mart")
