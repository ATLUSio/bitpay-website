          +integration("ubercart.png", "https://github.com/bitpay/ubercart-plugin", "Ubercart")
          +integration("virtuemart.png", "https://github.com/bitpay/virtuemart-plugin", "Virtue Mart")
          +integration("woocommerce.png", "https://github.com/bitpay/woocommerce-plugin", "WooCommerce")
          +integration("wpecommerce.png", "https://github.com/bitpay/wordpress-ecommerce-plugin", "WP eCommerce")
