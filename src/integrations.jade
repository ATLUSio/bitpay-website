extends _layouts/primary

block title
  title Integrations | BitPay

block content
  mixin integration(src, href, name)
    .column.small-3.margin-bottom.end
      a.h1.background-contain.integration-logo(href="#{href}" title="#{name}" style="background-image: url('images/integrations/#{src}');")
      span.small.text-center.block.margin-top-less #{name}
  .section.bg-gray.border-top-gray
    .row
      .column.medium-10.medium-offset-1
        h2.text-center.margin-bottom-less Accept Bitcoin Wherever You Take Payments
        p.lead.text-center.margin-bottom Over 40 integrations and counting. Find yours.
      .column.medium-8.medium-offset-2.end
        form
          input.integration-search(placeholder="Search our integrations..." type="search" value="" name="search")
          span.search-icon.background-contain(style="background-image: url('/images/search.svg');")
            
  .section.border-top-gray
    .row
      .column.medium-4.margin-bottom
        h3.header__bottom-border-left Integrated Solutions
        p.lead These integrated solutions work out of the box, no development required. Simple connect your BitPay account and begin accepting bitcoin payments.
      .column.medium-8.large-7.large-offset-1
        +integration("demandware.png", "#", "Demandware")
        +integration("shopify.png", "#", "Shopify")
        +integration("paypal.png", "#", "PayPal")
        +integration("3dcart.png", "#", "3DCart")
        +integration("blesta.png", "#", "Blesta")
        +integration("nats.png", "#", "NATs")
        +integration("foxycart.png", "#", "Foxycart")
        +integration("prospercart.png", "#", "ProsperCart")
