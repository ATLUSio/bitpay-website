extends _layouts/primary

block title
  title Integrations | BitPay

append vars
  -var integrationSelected = 'Integrated Solutions'
  -var pageSelected = 'Integrations'

block content
  mixin integration(src, href, name)
    .column.small-4.large-3.margin-bottom.end
      a.h1.background-contain.integration-logo(href="#{href}" title="#{name}" style="background-image: url('/images/integrations/#{src}');" target="_blank")
      span.small.text-center.block.margin-top-less #{name}

  .section.bg-gray.border-vertical-gray.margin-bottom-less
    .row
      .column.medium-10.medium-offset-1
        h2.text-center.header__bottom-border.fade-in-up Accept bitcoin anywhere you take payments.
        p.lead.text-center.fade-in-up.delay-1 Over 40 integrations and counting.
      //- .column.medium-8.medium-offset-2.end.fade-in-up.delay-2.margin-top
      //-   form
      //-     input.integration-search(placeholder="Search our integrations..." type="search" value="" name="search")
      //-     span.search-icon.background-contain(style="background-image: url('/images/search.svg');")
  include _includes/integrations-nav

  .section#integrated
    .row
      .column.large-5.margin-bottom
        h3.header__bottom-border-left Integrated Solutions
        p.lead These integrated solutions work out of the box, no development required. Simply connect your BitPay account and begin accepting bitcoin payments.
      .column.large-7.xlarge-6
        .row.small-collapse
          +integration("adyen.png", "http://adyen.com", "Adyen")
          +integration("demandware.png", "http://marketplace.demandware.com/Bitpay/Bitpay,default,pd.html", "Demandware")
          +integration("shopify.png", "https://docs.shopify.com/manual/settings/payments/payment-gateway#bitpay", "Shopify")
          +integration("paypal.png", "https://www.paypal.com/webapps/mpp/paymentshub", "PayPal")
          +integration("3dcart.png", "https://support.3dcart.com/knowledgebase/article/View/584/44/how-do-i-integrate-my-3dcart-store-with-bitpay", "3DCart")
          +integration("blesta.png", "http://docs.blesta.com/display/user/Bitpay", "Blesta")
          +integration("nats.png", "http://wiki.toomuchmedia.com/index.php/NATS4_Bit-Pay", "NATs")
          +integration("foxycart.png", "https://wiki.foxycart.com/gateways/bitpay", "Foxycart")
          +integration("prospercart.png", "http://www.prospercart.fi/uutiset/bitcoin-maksut-verkkokauppaan/", "ProsperCart")
          +integration("lemonstand.png", "https://docs.lemonstand.com/customer/bitpay-setup", "Lemonstand")
          +integration("cydec.png", "http://cydec.com", "Cydec")
          +integration("mpa3.png", "http://wiki.mansionproductions.com/index.php/MPA3:Admin_area/Settings/Billing_Processors/BitPay", "MPA3")
          +integration("egovlink.png", "http://www2.egovlink.com/press-release-bitcoin.cfm", "E-GOV Link")
          +integration("globalpayments.png", "http://globalpaymentsinc.com", "Global Payments")
          +integration("bitmonet.png", "http://bitmonet.com", "Bitmonet")

  .section.border-top-gray#plugins
    .row
      .column.large-5.margin-bottom
        h3.header__bottom-border-left Open Source Plugins
        p.lead BitPay develops and maintains plugins for many of the worldâ€™s most popular open-source eCommerce solutions.
      .column.large-7.xlarge-6
        .row.small-collapse
          +integration("magento.png", "https://github.com/bitpay/magento-plugin", "Magento")
          +integration("ecwid.png", "https://github.com/bitpay/ecwid-plugin", "Ecwid")
          +integration("gravityforms.png", "https://github.com/bitpay/gravityforms-plugin", "Gravity Forms")
          +integration("membershippro.png", "http://premium.wpmudev.org/project/membership/", "Membership Pro")
          +integration("opencart.png", "https://github.com/bitpay/opencart-plugin", "OpenCart")
          +integration("oscommerce.png", "https://github.com/bitpay/oscommerce-plugin", "OScommerce")
          +integration("prestashop.png", "https://github.com/bitpay/prestashop-plugin", "PrestaShop")
