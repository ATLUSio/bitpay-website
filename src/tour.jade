extends _layouts/primary

block title
  title Tour | BitPay
  
append vars
  -var tourSelected = 'Overview'

block content
  include _includes/tour-nav
  .padding-vertical-most.bg-gray.border-bottom-gray
    .row
      h2.text-center.header__bottom-border Why Bitcoin?
      .column.medium-10.medium-offset-1
        .margin-bottom-more
          .row
            .column.medium-3
              .icon.h2.background-contain(style="background-image: url('/images/no-fees.svg'); height: 2.5em;")
            .column.medium-9
              h4.small-only-text-center Eliminate Processing Fees
              p Receive 100% of what you charge for every transaction, with free, unlimited conversion to your own currency and settlement to your bank account.
        .margin-bottom-more
          .row
            .column.medium-3
              .icon.h2.background-contain(style="background-image: url('/images/global.svg'); height: 2.5em;")
            .column.medium-9
              h4.small-only-text-center Sell to Anyone, Anywhere
              p Connect to the world’s first borderless payment network - Bitcoin. Accept payment in any amount, from anywhere in the world, from anyone with computer or mobile device.
        .row
          .column.medium-3
            .icon.h2.background-contain(style="background-image: url('/images/security.svg'); height: 2.5em;")
          .column.medium-9
            h4.small-only-text-center End Chargebacks and Identity Theft
            p Protect your customers and your business from the risks and costs of payment fraud with a payment method made for online commerce.
          
  .section
    .row
      h2.text-center.header__bottom-border BitPay Makes it Easy
      .column.medium-8.medium-offset-2
        p.lead.text-center.margin-bottom-more BitPay allows you to accept payments in bitcoin and receive exactly what you charge in your currency of choice, directly to your bank account - all with zero fees. It’s that simple.
        .how-works-illustration
          .timeline
          .step1
            .step1-text
              p.small Your customer chooses to pay with bitcoin during the checkout process.
            .step1-icon.background-contain(style="background-image: url('/images/person.svg');")
          .step2
            .step2-text.text-right
              p.small They pay the BitPay invoice at a locked in exchange rate&mdash; get what you charge.
            .step2-icon.background-contain(style="background-image: url('/images/qr.svg');")
          .step3
            .step3-text
              p.small BitPay instantly converts the bitcoin to fiat and shields you from any volatility risk.
            .step3-icon.background-contain(style="background-image: url('/images/exchange.svg');")
          .step4
            .step4-text.text-right
              p.small Daily deposits into your bank account without risk or processing fees.
            .step4-icon.background-contain(style="background-image: url('/images/merchant.svg');")
          .bitcoin
          .fiat $
          .paid

  .section.bg-gray.border-top-gray
    .row
      h2.text-center.header__bottom-border Get Started
      .column.medium-8.medium-offset-2
        p.lead.text-center Starting out with a new technology doesn’t always have to be complicated. We make adding a bitcoin payment option easy with <a href="/integrations">over 50 solutions</a>: plugins, integrations, and payment tools.
      
      .column.margin-vertical.small-6.medium-4.medium-offset-2.text-center.border-right-gray
        a(href="#").h3.arrow Sell Online
      .column.margin-vertical.small-6.medium-4.end.text-center
        a(href="#").h3.arrow Sell In Store
      a(href="/integrations" style="background-image: url('/images/integration-logos.png'); height: 4em;").column.medium-8.medium-offset-2.end.h1.background-contain
  
  .section.border-top-gray
    .row
      h3.text-center Sign up for a BitPay account. It's free and always will be.
      .margin-top-less
        .column.medium-4.medium-offset-2.text-center
          a(href="#").white.btn.btn-blue-solid.uppercase.bold.medium-float-right Accept Bitcoin
        .column.medium-4.text-center.end
          a(href="/features").btn.btn-blue-border.uppercase.bold.medium-float-left Continue Tour
